@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/Index.cshtml";
}
@* MESAJ INDEX *@
<div class="sub_page">
    <div class="hero_area">
        <div class="bg-box">
            <img src="~/feane-1.0.0/images/hero-bg.jpg" alt="">
        </div>
        <vc:_default-navbar-component-partial />
    </div>
    <br /><br />

    <section class="food_section layout_padding-bottom">
        <div class="container">
            <div class="heading_container heading_center">
                <h2>
                    SignalR Restoran Anlık Mesajlaşma
                </h2>
            </div>
            <br /><br />
            <div class="row">
                <div class="col-md-6">
                    <h4 class="btn btn-primary btn-round">Anlık Client Sayısı: <strong id="clientcountvalue"></strong></h4>
                </div>
                <div class="col-md-6 text-right">
                    <div class="btn btn-success btn-round">Bağlantının Durumu: <strong id="connstatus"></strong></div>
                </div>
            </div>
        </div>

        <div class="container mt-5">

            <div class="row p-1">
                <div class="col-2">Kullanıcı Adınız:</div>
                <div class="col-5">
                    <input type="text" id="userinput" class="form-control" />
                </div>
            </div>


            <div class="row p-1">
                <div class="col-2">Mesajınız:</div>
                <div class="col-5">
                    <input type="text" class="form-control" id="messageinput" />
                </div>
            </div>


            <div class="row p-1">
                <div class="col-2"></div>
                <div class="col-3">
                    <input type="button" id="sendbutton" value="Mesaj Gönder" class="btn btn-warning" />
                </div>
            </div>


            <div class="row p-1">
                <div class="col-12">
                    <hr />
                </div>
            </div>


            <div class="row p-1">
                <div class="col-12">
                    <ul id="messagelist" class="list-group"></ul>
                </div>
            </div>

        </div>

    </section>

</div>

<!-- Message-->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/5.0.8/signalr.min.js"></script>
<script src="~/js/chat.js"></script>


