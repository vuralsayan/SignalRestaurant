@model CreateMailDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Mail Sayfası</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post" asp-controller="Mail" asp-action="Index">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Mail Gönderme Paneli</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label>Alıcı Mail Adresi</label>
                                <input type="text" class="form-control" asp-for="ReceiverMail">
                            </div>
                            <div class="form-group">
                                <label>Konu</label>
                                <input type="text" class="form-control" asp-for="Subject">
                            </div>
                            <div class="form-group">
                                <label>Mesajınız</label>
                                <textarea type="text" class="form-control"  rows="4" asp-for="Content"></textarea>
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-success">Maili Gönder</button>
                            <a href="/Booking/Index/" class="btn btn-danger">İptal</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

