@model UpdateTableDetailDto
@{
    ViewData["Title"] = "UpdateTableDetail";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Masa İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post" asp-controller="TableDetail" asp-action="UpdateTableDetail">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Masa Güncelleme </div>
                        </div>
                        <div class="card-body">
                            <input type="hidden" asp-for="TableDetailID" />
                            <div class="form-group">
                                <label>Masa İsmi</label>
                                <input type="text" class="form-control" asp-for="Name">
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-success">Güncelle</button>
                            <a href="/TableDetail/Index/" class="btn btn-danger">İptal</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

