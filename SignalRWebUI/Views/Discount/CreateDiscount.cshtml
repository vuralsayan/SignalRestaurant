@model CreateDiscountDto
@{
    ViewData["Title"] = "CreateDiscount";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">İndirimli Ürün İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post" asp-controller="Discount" asp-action="CreateDiscount">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni İndirimli Ürün Girişi </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label>Ürün Adını Giriniz</label>
                                <input type="text" class="form-control" asp-for="Title">
                            </div>
                            <div class="form-group">
                                <label>Ürün İndirim Oranı</label>
                                <input type="text" class="form-control" asp-for="Amount">
                            </div>
                            <div class="form-group">
                                <label>Ürün Görselini Giriniz</label>
                                <input type="text" class="form-control" asp-for="ImageUrl">
                            </div>
                            <div class="form-group">
                                <label>Ürün Açıklaması</label>
                                <textarea class="form-control" asp-for="Description" rows="4"></textarea>
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-success">İndirimli Ürünü Ekle</button>
                            <a href="/Discount/Index/" class="btn btn-danger">İptal</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

