@model UpdateAboutDto
@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Hakkımda İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post" asp-controller="About" asp-action="UpdateAbout">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Hakkımda Güncelle </div>
                        </div>
                        <div class="card-body">
                            <input type="hidden" asp-for="AboutID" />
                            <div class="form-group">
                                <label>Hakkımda Başlığı</label>
                                <input type="text" class="form-control" asp-for="Title">
                            </div>
                            <div class="form-group">
                                <label>Resim</label>
                                <input type="text" class="form-control" asp-for="ImageUrl">
                            </div>
                            <div class="form-group">
                                <label>Açıklama</label>
                                <textarea class="form-control" asp-for="Description" rows="4"></textarea>
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-success">Güncelle</button>
                            <a href="/About/Index/" class="btn btn-danger">İptal</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



