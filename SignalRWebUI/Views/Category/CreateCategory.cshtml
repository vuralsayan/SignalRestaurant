@model CreateCategoryDto
@{
    ViewData["Title"] = "CreateCategory";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Kategori İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni Kategori</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label asp-for="CategoryName">Kategori Adı</label>
                                <input type="text" class="form-control" asp-for="CategoryName">
                            </div>
                            <div class="form-check">
                                <label>Durum</label><br />
                                <label class="form-radio-label">
                                    <input class="form-radio-input" type="radio" asp-for="Status" value="True" checked="">
                                    <span class="form-radio-sign">True</span>
                                </label>
                                <label class="form-radio-label ml-3">
                                    <input class="form-radio-input" type="radio" asp-for="Status" value="False">
                                    <span class="form-radio-sign">False</span>
                                </label>
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-success">Ekle</button>
                            <a href="/Category/Index/" class="btn btn-danger">İptal</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

