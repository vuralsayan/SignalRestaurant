@model UpdateNotificationDto
@{
    ViewData["Title"] = "UpdateNotification";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Bildirim İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post" asp-controller="Notification" asp-action="UpdateNotification">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Bildirim Güncelleme</div>
                        </div>
                        <div class="card-body">
                            <input type="hidden" asp-for="NotificationID" />
                            <input type="hidden" asp-for="Date" />
                            <input type="hidden" asp-for="Status" />
                            <div class="form-group">
                                <label>Bildirim Türü</label>
                                <input type="text" class="form-control" asp-for="NotificationType">
                            </div>
                            <div class="form-group">
                                <label>Bildirim İkonu</label>
                                <input type="text" class="form-control" asp-for="NotificationIcon">
                            </div>
                            <div class="form-group">
                                <label>Açıklama</label>
                                <input type="text" class="form-control" asp-for="Description">
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-success">Güncelle</button>
                            <a href="/Notification/Index/" class="btn btn-danger">İptal</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

