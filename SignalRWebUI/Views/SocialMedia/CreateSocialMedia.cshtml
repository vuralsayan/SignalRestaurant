@model CreateSocialMediaDto
@{
    ViewData["Title"] = "CreateSocialMedia";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Sosyal Medya İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post" asp-controller="SocialMedia" asp-action="CreateSocialMedia">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni Sosyal Medya Girişi </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label>Sosyal Medya Başlığı</label>
                                <input type="text" class="form-control" asp-for="Title">
                            </div>
                            <div class="form-group">
                                <label>Url</label>
                                <input type="text" class="form-control" asp-for="Url">
                            </div>
                            <div class="form-group">
                                <label>İkon</label>
                                <input type="text" class="form-control" asp-for="Icon">
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-success">Ekle</button>
                            <a href="/SocialMedia/Index/" class="btn btn-danger">İptal</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

