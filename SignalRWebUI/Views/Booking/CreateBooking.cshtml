@model CreateBookingDto
@{
    ViewData["Title"] = "CreateBooking";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Rezervasyon İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post" asp-controller="Booking" asp-action="CreateBooking">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni Rezervasyon Girişi</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label>Ad Soyad</label>
                                <input type="text" class="form-control" asp-for="Name">
                            </div>
                            <div class="form-group">
                                <label>Telefon</label>
                                <input type="text" class="form-control" asp-for="Phone">
                            </div>
                             <div class="form-group">
                                <label>Mail Adresi</label>
                                <input type="email" class="form-control" asp-for="Mail">
                            </div>
                            <div class="form-group">
                                <label>Kişi Sayısı</label>
                                <input type="number" class="form-control" asp-for="PersonCount">
                            </div>
                            <div class="form-group">
                                <label>Rezervasyon Tarihi</label>
                                <input type="date" class="form-control" asp-for="Date">
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-success">Rezervasyon Oluştur</button>
                            <a href="/Booking/Index/" class="btn btn-danger">İptal</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
