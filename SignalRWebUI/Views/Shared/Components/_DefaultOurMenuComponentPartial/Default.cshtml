@model List<ResultProductDto>
<section class="food_section layout_padding-bottom">
    <div class="container">
        <div class="heading_container heading_center">
            <h2>
                Öne Çıkan Ürünlerimiz
            </h2>
        </div>

        <ul class="filters_menu">
            <li class="active" data-filter="*">Tümü</li>
            @foreach (var category in Model.Select(x => x.CategoryName).Distinct())
            {
                <li data-filter=".@(category?.ToLower().Replace(" ", "-") ?? "")">@category</li>
            }

        </ul>

        <div class="filters-content">
            <div class="row grid">
                @foreach (var item in Model)
                {
                    var categoryClass = item.CategoryName?.ToLower().Replace(" ", "-") ?? "";
                    <div class="col-sm-6 col-lg-4 all @categoryClass">
                        <div class="box">
                            <div>
                                <div class="img-box">
                                    <img src="@item.ImageUrl" alt="">
                                </div>
                                <div class="detail-box">
                                    <h5>
                                        @item.ProductName
                                    </h5>
                                    <p>
                                        @item.Description
                                    </p>
                                    <div class="options">
                                        <h6>
                                            @item.Price ₺
                                        </h6>
                                        <a href="javascript:void(0)" onclick="showproductid(@item.ProductID)">
                                            <i class="fas fa-shopping-cart text-white"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
        <div class="btn-box">
            <a href="/Basket/Index/">
                Sepete Git
            </a>
        </div>
    </div>
</section>