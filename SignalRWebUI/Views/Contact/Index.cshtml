@model List<ResultContactDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Ana Sayfa İletişim Bilgi İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">İletişim Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            İletişim alanıyla ilgili işlemleri buradan yapabilirsiniz. <strong>Tema bütünlüğü için sadece 1 tane iletişim alanı oluşturunuz.</strong>
                        </div>
                        <div class="table-responsive DIV">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">Konum</th>
                                        <th scope="col">Telefon</th>
                                        <th scope="col">Mail</th>
                                        <th scope="col">Açıklama</th>
                                        <th scope="col">Sil</th>
                                        <th scope="col">Güncelle</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.ContactID</td>
                                            <td>@item.Location</td>
                                            <td>@item.Phone</td>
                                            <td>@item.Mail</td>
                                            <td>@item.FooterDescription</td>
                                            <td><a href="/Contact/DeleteContact/@item.ContactID" class="btn btn-danger">Sil</a></td>
                                            <td><a href="/Contact/UpdateContact/@item.ContactID" class="btn btn-primary">Güncelle</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <br />
                        <a href="/Contact/CreateContact/" class="btn btn-default">Yeni İletişim Bilgisi Ekle</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

